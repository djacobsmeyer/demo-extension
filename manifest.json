{
  "manifest_version": 3,
  "name": "Network Traffic Monitor",
  "description": "Monitor web requests and responses",
  "version": "1.0",
  "permissions": [
    "declarativeNetRequest",
    "debugger",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
